@model CartModel
@{
    ViewData["Title"] = "Index";
}

<h1>Cart</h1>
<div class="row mt-5">
    <div class="col-md-8">
        <h4>Cart Items</h4>
        <table class="table table-hover">
            <thead>
                <tr>
                    <td> </td>
                    <td> Product Name </td>
                    <td> Price </td>
                    <td> Quantity </td>
                    <td> Product Total </td>
                    <td>  </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>
                            <img src="~/img/@item.ImageUrl" width="80" />
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Price.ToString("c")
                        </td>
                        <td>
                            @item.Quantity
                        </td>
                        <td>
                            @((item.Quantity*item.Price).ToString("c"))
                        </td>
                        <td>
                            <form asp-controller="Cart" asp-action="DeleteFromCart" method="post">
                                <input type="hidden" name="productId" value="@item.ProductID" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fa fa-times fa-fw"></i>
                                </button>
                            </form>
                           
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
    <div class="col-md-4">
        <div class="text-left">
            <h4>Cart Summary</h4>
        </div>
        <table class=" table">
            <tbody>
                <tr>
                    <th>
                        Cart Total
                    </th>
                    <td>
                       @Model.TotalPrice().ToString("c")
                    </td>
                </tr>
                <tr>
                    <th>
                        Shipping
                    </th>
                    <td>
                        Free
                    </td>
                </tr>
                <tr>
                    <th>
                        Order Total
                    </th>
                    <td>
                        @Model.TotalPrice().ToString("c")
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="text-center">
            <a href="/" class="btn btn-primary">
                <i class="fa fa-arrow-circle-left fa-fw"></i> Continue Shopping
            </a>
            <a href="/cart/checkout" class="btn btn-primary">
                <i class="fa fa-arrow-circle-right fa-fw"></i> Checkout
            </a>
           
            
        </div>
    </div>
</div>

