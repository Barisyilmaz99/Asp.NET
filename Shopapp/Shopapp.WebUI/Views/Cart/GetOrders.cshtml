@model List<OrderListModel>
@{
    ViewData["Title"] = "GetOrders";
}

<h1>Orders</h1>
<hr />

@foreach (var order in Model)
{
    <table class=" table table-bordered table-sm mb-3">
        <thead>
            <tr>
                <td colspan="2">OrderID: #@order.Id</td>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>

        <tbody>
           @foreach (var orderitem in order.OrderItems)
            {
             <tr>
                <td>
                    <img src="~/img/@orderitem.ImageUrl" width="50" />
                </td>
                <td>
                    @orderitem.Name
                </td>
                <td>
                    @orderitem.Quantity
                </td>
                <td>
                    @orderitem.Price
                </td>
            </tr>

            }
        </tbody>

        <tfoot>
            <tr>
                <td colspan="2">
                    Customer Name :
                </td>
                <td>
                    @order.FirstName @order.LastName
                </td>
                <td>Total: @order.TotalPrice()</td>
            </tr>
            <tr>
                <td colspan="2">
                    @order.Address
                </td>
            </tr>
            <tr>
                <td colspan="2">Address:</td>
                <td>@order.Address</td>
            </tr>
            <tr>
                <td colspan="2">Phone:</td>
                <td>@order.Phone</td>
            </tr>
            <tr>
                <td colspan="2">Email:</td>
                <td>@order.Email</td>
            </tr>
        </tfoot>
    </table>


}
