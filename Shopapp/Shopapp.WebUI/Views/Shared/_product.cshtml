@model Product

<div class="col-md-4 mt-5">
    <div  class="card mb-3">
        <img src="~/img/@Model.ImageURL" alt="@Model.Name" class="card-img-top">
        <div class="card-body" >
            <h4 class="card-title">
                <a href="#">@Model.Name</a>
            </h4>
            <small class="text-muted">
                <i class="fas fa-lira-sign"></i> @Model.Price
            </small>
        </div>
    </div>
    <div class="card-footer text-center">
        <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.ID" class="btn  btn-outline-primary btn-sm">Details</a>
        @if (User.Identity.IsAuthenticated)
         {
         <form asp-action="AddToCart" asp-controller="Cart" method="post" style="display:inline">
             <input type="hidden" name="productID" value="@Model.ID" />
             <input type="hidden" name="Quantity" value="1" />
             <button type="submit" class="btn btn-outline-primary btn-sm ml-3">Add to Cart</button>
         </form>
       
         }


    </div>
</div>
